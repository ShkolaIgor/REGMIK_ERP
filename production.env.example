# REGMIK ERP Production Environment Configuration
# Скопіюйте цей файл як production.env та змініть значення

# Database Configuration (використовуйте один з двох варіантів)
# Варіант 1: DATABASE_URL
DATABASE_URL=postgresql://regmik_user:YOUR_PASSWORD@localhost:5432/regmik-erp

# Варіант 2: Окремі змінні PostgreSQL
PGHOST=localhost
PGPORT=5432
PGDATABASE=regmik-erp
PGUSER=regmik_user
PGPASSWORD=YOUR_DATABASE_PASSWORD

# Session Security
SESSION_SECRET=YOUR_SUPER_SECURE_SESSION_SECRET_MINIMUM_32_CHARS

# Nova Poshta API Integration
NOVA_POSHTA_API_KEY=YOUR_NOVA_POSHTA_API_KEY

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=YOUR_APP_PASSWORD

# Application Settings
NODE_ENV=production
PORT=5000

# SSL Configuration
SSL_REJECT_UNAUTHORIZED=false